pipeline {
    agent any
 
    stages {
        stage('with Docker') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    
                '''
            }
        }
        stage('without Docker') {
            steps {
                sh '''
                    echo "without docker"
                    touch "without-container.txt"
                '''
            }
        }
       
    }
}